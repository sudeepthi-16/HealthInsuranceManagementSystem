            "nullable": true
          },
          "isNetworkHospital": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "CreateHospitalManagerDto": {
        "required": [
          "email",
          "hospitalId",
          "password"
        ],
        "type": "object",
        "properties": {
          "hospitalId": {
            "type": "integer",
            "format": "int32"
          },
          "email": {
